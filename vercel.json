{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" } 
    }
  ],
  "outputDirectory": "client/build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "api/index.js" },
    { "source": "/(.*)", "destination": "client/index.html" }
  ]
}