{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",          
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    {
      "src": "api/index.js",        
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/((?!static|favicon.ico).*)", "destination": "/index.html" }
  ]
}